package gameEngine;

import org.newdawn.slick.Image;
import org.newdawn.slick.SlickException;
import org.newdawn.slick.state.StateBasedGame;

public class Button
{
	 private int height, width;
	 private int x, y;
	 Image bi;
	public Button(int x, int y, int width, int height, String img) throws SlickException
	{
		this.height = height;
		this.width = width;
		this.x = x;
		this.y = y;

		bi = new Image(img);
		bi.draw(x, y, width, height);
	}
	 
	 public int getY()
	 {
		 return y;
	 }
	 
	 public int getX()
	 {
		 return x;
	 }
	 
	 public int getWidth()
	 {
		 return width;
	 }
	
	 public int getHeight()
	 {
		 return height;
	 }
	 
	 public void draw()
	 {
		 bi.draw(x, y, width, height);
	 }
}
